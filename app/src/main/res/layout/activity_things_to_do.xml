<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_things_to_do"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/todo_right_background"
    tools:context="com.example.team05.ThingsToDo">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />



    <View
        android:id="@+id/viewleft"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/todo_left_background"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageAlnwick"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:translationX="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_alnwick"
        tools:ignore="MissingConstraints"
        android:background="@drawable/todo_button" />

    <ImageButton
        android:id="@+id/imageAuckland"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:translationX="10dp"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_auckland"
        tools:ignore="MissingConstraints"
        android:background="@drawable/todo_button" />
    <ImageButton
        android:id="@+id/imageBamburgh"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:translationX="10dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_bamburgh"
        tools:ignore="MissingConstraints"
        android:background="@drawable/todo_button" />
    <ImageButton
        android:id="@+id/imageBarnard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:translationX="10dp"
        android:layout_marginTop="440dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_barnard"
        tools:ignore="MissingConstraints"
        android:background="@drawable/todo_button" />




    <Button
        android:id="@+id/btnRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="40dp"
        android:text="Nearby Restaurants"
        app:layout_constraintEnd_toStartOf="@+id/btnSupermarket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:text="Nearby SuperMarkets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginTop="188dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/PlaceName"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:gravity="left"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <TextView
        android:id="@+id/PlaceUrl"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="120dp"
        android:gravity="left"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlaceName"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/PlacePhone"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="120dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlaceUrl"
        android:autoLink="phone"/>

    <TextView
        android:id="@+id/PlaceRating"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="120dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlacePhone" />



</androidx.constraintlayout.widget.ConstraintLayout>