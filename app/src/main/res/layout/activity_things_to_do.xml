<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_things_to_do"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/todo_right_background"
    tools:context="com.example.team05.ThingsToDo">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/sele_nav_color"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />



    <View
        android:id="@+id/viewleft"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/todo_left_background"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageAlnwick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:translationX="5dp"
            android:src="@drawable/selector_alnwick"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_alnwick"
            tools:ignore="MissingConstraints"
            android:background="@drawable/todo_button" />

        <TextView
            android:id="@+id/textAlnwick"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Alnwick\nCastle"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textColor="@color/main_blue"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="8"
            android:layout_marginTop="95dp"
            android:translationX="5sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageAuckland"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:translationX="5dp"
            android:src="@drawable/selector_auckland"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_auckland"
            tools:ignore="MissingConstraints"
            android:background="@drawable/todo_button" />

            <TextView
                android:id="@+id/textAuckland"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="235dp"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="8"
                android:text="Auckland\nCastle"
                android:textColor="@color/main_blue"
                android:textStyle="bold"
                android:translationX="5sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageBamburgh"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:translationX="5dp"
            android:src="@drawable/selector_bamburgh"
            android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_bamburgh"
            tools:ignore="MissingConstraints"
            android:background="@drawable/todo_button" />

        <TextView
            android:id="@+id/textBamburgh"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Bamburgh\nCastle"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textColor="@color/main_blue"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="8"
            android:layout_marginTop="375dp"
            android:translationX="5sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageBarnard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:translationX="5dp"
            android:src="@drawable/selector_barnard"
            android:layout_marginTop="440dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_barnard"
            tools:ignore="MissingConstraints"
            android:background="@drawable/todo_button" />

        <TextView
            android:id="@+id/textBarnard"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Barnard\nCastle"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textColor="@color/main_blue"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="8"
            android:layout_marginTop="515dp"
            android:translationX="5sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/currentLocation"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:translationX="5dp"
            android:layout_marginTop="580dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/currentlocation"
            tools:ignore="MissingConstraints"
            android:background="@drawable/todo_button" />

            <TextView
                android:id="@+id/textCurrentLocation"
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:layout_marginTop="655dp"
                android:fontFamily="@font/alata"
                android:gravity="center_horizontal"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="8"
                android:text="Current\nLocation"
                android:textColor="@color/main_blue"
                android:textStyle="bold"
                android:translationX="5sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>
    </ScrollView>


    <Button
        android:id="@+id/btnRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/todo_nearby_button"
        android:text="Eat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSupermarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/todo_nearby_button"
        android:text="Shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="260dp"
        android:layout_height="430dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <TextView
        android:id="@+id/PlaceName"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text=""
        android:fontFamily="@font/abhaya_libre"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <TextView
        android:id="@+id/PlaceUrl"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="60dp"
        android:gravity="left"
        android:text=""
        android:fontFamily="@font/abhaya_libre"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/PlacePhone"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:fontFamily="@font/abhaya_libre"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlaceUrl"
        android:autoLink="phone"/>

    <TextView
        android:id="@+id/PlaceRating"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:gravity="right"
        android:fontFamily="@font/abhaya_libre"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlaceUrl" />




</androidx.constraintlayout.widget.ConstraintLayout>